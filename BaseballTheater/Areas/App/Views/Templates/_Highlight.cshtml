

<template id="highlight">
	<div class="highlight">
		<h2>{{getTitle(highlight)}}</h2>
		<div class="video">
			<video v-bind:src="getDefaultUrl(highlight)" preload="none" 
			       v-bind:poster="getDefaultThumb(highlight)" 
			       v-on:play="onPlay(highlight)" 
				   v-on:pause="onPause(highlight)"></video>
			<div class="play-cover" v-on:click="playVideo(highlight)"></div>
		</div>

		<div class="links">
			<span>Direct: </span>
			<a v-for="link in getLinks(highlight)" v-bind:href="link.url" v-on:click.prevent="playUrl(link.url, event)">{{link.label}}</a>
		</div>
	</div>
</template>
