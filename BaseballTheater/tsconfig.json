{
	"include": [
		"Scripts/**/*",
		"Shared/Scripts/**/*",
		"Areas/**/*"
	],
	"compileOnSave": true,
	"compilerOptions": {
		"moduleResolution": "node",
		"strictNullChecks": true,
		"target": "es6",
		"module": "commonjs",
		"sourceMap": true,
		"lib": [
			"es5",
			"esnext",
			"dom",
			"es6"
		],
		"noImplicitThis": true,
		"baseUrl": "Scripts/typings",
		"typeRoots": [
			"Scripts/typings"
		],
		"types": [],
		"jsx": "react"
	}
}