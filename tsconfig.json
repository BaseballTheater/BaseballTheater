{
  "compilerOptions": {
    "types": ["node"],
    "lib": ["es6"],
    "module": "commonjs",
    "esModuleInterop": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "server",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "server"
  ],
  "exclude": [
    "client"
  ]
}
