{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmit": false,
    "baseUrl": "server"
  },
  "include": [
    "server"
  ],
  "exclude": [
    "client",
    "node_modules"
  ]
}
